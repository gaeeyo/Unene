<UserControl x:Class="Unene.ClockControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >
    
    <Grid x:Name="LayoutRoot">
        <TextBlock Name="clockText" Text="00:00" TextAlignment="Center" VerticalAlignment="Center" FontSize="60" FontWeight="Bold" FontFamily="Arial" Foreground="#FF9EE4FC" LineHeight="60" LineStackingStrategy="BlockLineHeight" >
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="2" Color="#ff000000" ShadowDepth="2"  />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
